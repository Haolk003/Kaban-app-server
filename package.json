    "supertest": "^7.0.0",
    "ts-jest": "^29.2.6",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^y/auth-library(|/.*)$": "<rootDir>/libs/auth-library/src/$1",
      "^y/cloudinary(|/.*)$": "<rootDir>/libs/cloudinary/src/$1",
      "^y/common(|/.*)$": "<rootDir>/libs/common/src/$1",
      "^y/email(|/.*)$": "<rootDir>/libs/email/src/$1",
      "^y/prisma(|/.*)$": "<rootDir>/libs/prisma/src/$1",
      "^y/rabbitmq(|/.*)$": "<rootDir>/libs/rabbitmq/src/$1"
    }
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "@apollo/protobufjs",
      "@nestjs/core",
      "@prisma/client",
      "@prisma/engines",
      "@swc/core",
      "core-js",
      "esbuild",
      "prisma",
      "sharp"
    ]
  }
