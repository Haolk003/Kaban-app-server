{
  "compilerOptions": {
    "typeRoots": [
      "./node_modules/@types",
      "./src/types",
      "./libs/common/src/types"
    ],
    "types": ["node", "express"],
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "y/auth-library": ["libs/auth-library/src"],
      "y/auth-library/*": ["libs/auth-library/src/*"],
      "y/common": ["libs/common/src"],
      "y/common/*": ["libs/common/src/*"],
      "y/email": ["libs/email/src"],
      "y/email/*": ["libs/email/src/*"],
      "y/prisma": ["libs/prisma/src"],
      "y/prisma/*": ["libs/prisma/src/*"],
      "y/rabbitmq": ["libs/rabbitmq/src"],
      "y/rabbitmq/*": ["libs/rabbitmq/src/*"]
    }
  }
}
